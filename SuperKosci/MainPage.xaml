<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SuperKosci.MainPage">

    <Grid RowDefinitions="*,*,*,*,*,*" ColumnDefinitions="*,*,*,*,*,*" BackgroundColor="Aquamarine">
        <Label Text="Gra w kości, Autor Franek" BackgroundColor="Red" Grid.Column="2"></Label>
        <Button Text="Rzuc Koscmi" Grid.Row="1" HeightRequest="3" Grid.Column="2" Clicked="Button_Clicked"></Button>
        <Image Source="pytajnik.png" Grid.Column="0" Grid.Row="2" x:Name="kosc1"></Image>
        <Image Source="pytajnik.png" Grid.Column="1" Grid.Row="2" x:Name="kosc2"></Image>
        <Image Source="pytajnik.png" Grid.Column="2" Grid.Row="2" x:Name="kosc3"></Image>
        <Image Source="pytajnik.png" Grid.Column="3" Grid.Row="2" x:Name="kosc4"></Image>
        <Image Source="pytajnik.png" Grid.Column="4" Grid.Row="2" x:Name="kosc5"></Image>
        <Label Text="Wynik tego losowania: " Grid.Column="1" Grid.Row="3"></Label>
        <Label Text="" Grid.Column="2" Grid.Row="3" x:Name="losowanie"></Label>
        <Label Text="Wynik gry:" Grid.Column="1" Grid.Row="4"></Label>
        <Label Text="" Grid.Column="2" Grid.Row="4" x:Name="wynikC"></Label>
        <Button Text="RESET" BackgroundColor="Orange" Grid.Column="2" Grid.Row="5" Clicked="reset"></Button>
    </Grid>

</ContentPage>
